<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../partials/head") %>
</head>

<body class="container">

  <header>
    <%- include ("../partials/header") %>
  </header>
  <main>
    <div class="row">
      <div class="col-sm-8">
        <div class="taskform">
          <h3>Task form</h3>
          <form action="/new-task" method="post">
            <div class="form-group row">
              <label for="colFormLabel" class="col-sm-2 col-form-label">Task Name</label>
              <div class="col-sm-10">
                  <input type="text" class="form-control" name="taskName" id="taskName" placeholder="Task Name">
              </div>
          </div>
          <div class="form-group row">
            <label for="colFormLabel" class="col-sm-2 col-form-label">Task Details</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="taskDetails" id="taskDetails" placeholder="Task Details">
            </div>
            <div class="add-task col-sm-8">
              <button type="submit" class="btn-addTask btn btn-success" id="local-btn">Add Task</button>
          </div>
        </div>
        </form>
        </div>
        <div class="taskcards">
          <h3>Current Tasks</h3>
          <div class="cardDisplay">
          <% tasks.forEach(function(task){ %>
            <%- include ("../partials/taskcard", {task: task}); %>
          <% }); %>
        </div>
          </div>
      </div>
      <div class="group-tasks col-sm-4">
        <h3>Group tasks</h3>
        <% groupTask.forEach(function(groupTasks){ %>
          <%- include ("../partials/taskcarddisplay", {groupTasks: groupTasks}); %>
        <% }); %>
      </div>
    </div>


  </main>

  <footer>
    <%- include ("../partials/footer") %>
  </footer>

</body>

</html>