<!-- views/pages/profile.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ("../partials/head") %>
</head>

<body class="container">

  <header>
    <%- include ("../partials/header") %>
  </header>

  <main>
    <h2><%= user.firstName%>'s Profile Details</h2>
    <form action="/update-profile/<%= user.id %>" method="post">
      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="firstName" value="<%= user.firstName %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="lastName" value="<%= user.lastName %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="email" class="form-control" name="email" value="<%= user.email %>">
        </div>
      </div>
      <div class="form-group row">
        <label for="colFormLabel" class="col-sm-2 col-form-label">Group</label>
        <div class="col-sm-10">
          <select class="form-control" id="selectedGroup" name="groupsID">
            <option value="" disabled selected>Select your group</option>
            <% groups.forEach(function(group){ %>
            <%- include ("../partials/grouplist", {group: group}); %>
            <% }); %>
          </select>
        </div>
      </div>

      <button type="submit" class="btn-local btn btn-success">Update</button>

    </form>

  </main>

  <footer>
    <%- include ("../partials/footer") %>
  </footer>

</body>

</html>